<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiBeerApp"
             xmlns:helpers="clr-namespace:MauiBeerApp.Helpers"
             xmlns:converters="clr-namespace:MauiBeerApp.Converters"
             x:Class="MauiBeerApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontImageSource x:Key="BeerIcon" FontFamily="MaterialIcons" Glyph="{x:Static helpers:IconFont.BeerOutline}"/>
            <FontImageSource x:Key="DiscoverIcon" FontFamily="MaterialIcons" Glyph="{x:Static helpers:IconFont.StarBox}"/>
            <converters:ListOfStringConverter x:Key="ListOfStringConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBeerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:MauiBeerApp.Helpers"
    xmlns:local="clr-namespace:MauiBeerApp"
    Shell.FlyoutBehavior="Disabled">
   <TabBar>
       <ShellContent
            Title="Discover Beer"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" Icon="{StaticResource Key=DiscoverIcon}" />
        <ShellContent
            Title="All Beers"
            ContentTemplate="{DataTemplate local:BeersPage}"
            Route="BeersPage" Icon="{StaticResource Key=BeerIcon}" />
    </TabBar>
</Shell>